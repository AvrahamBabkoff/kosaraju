{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "kosaraju.c",
                "pollserver.c",
                "tcp_reactor.c", 
                "tcp_dup.c", 
                "listner.c", 
                "tcp_threads.c",
                "poll_reactor.c",
                "-o",
                "${fileDirname}/debug/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}